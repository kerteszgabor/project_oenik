@page "/Tests/Add"
@inherits PageBase

@inject TestsService testService
@attribute [Authorize(Roles = "Teacher")]

<MudContainer MaxWidth=MaxWidth.ExtraLarge>
    <MudGrid Justify=Justify.SpaceBetween>
        <MudItem md="7">
            <MudCard Class="d-flex align-right justify-center mud-width-full py-8" Outlined=true Elevation=6>
                <MudText GutterBottom="true" Typo=Typo.h6>Új teszt hozzáadása</MudText>
                <MudDivider DividerType="DividerType.Middle" Class="my-6"/>
                <MudTextField T="string" Label="A kérdés szövege" Variant="Variant.Outlined"/>
                <MudButton OnClick="() => test()"></MudButton>
            </MudCard>
        </MudItem>
        <MudItem md="3">
            <MudPaper Class="d-flex align-right justify-center mud-width-full py-8">
                <MudText Typo=Typo.h6>Tesztjeim</MudText>
                <TestSelector IsChipNeeded=false></TestSelector>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    void test()
    {
        _navManager.NavigateTo("/questions/newQuestion/Text");
    }
}
