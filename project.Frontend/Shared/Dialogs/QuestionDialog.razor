<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Filled.QuestionAnswer" Class="mr-3 mb-n1"/>
            @question.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@question.Text.ToString()" Label="Kérdés szövege" ReadOnly="true"/>
        <MudTextField Value="@question.QuestionType" Label="Kérdés fajtája" ReadOnly="true"/>
        <MudTextField Value="@question.CorrectAnswer" Label="Helyes válasz" ReadOnly="true"/>
        <MudTextField Value="@question.MaxPoints" Label="Pontok száma" ReadOnly="true"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Vissza</MudButton>
        <MudButton Color="Color.Primary" OnClick="AddToTest">Hozzáadás saját teszthez</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Question question { get; set; } = new Question();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void AddToTest()
    {
        MudDialog.Close(DialogResult.Ok(question.ID));
    }
}